{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",    // Use ESNext for ESM (import/export)
    "moduleResolution": "node", // Resolves modules like Node.js
    "target": "ESNext",    // Ensures compatibility with latest JS features
    "esModuleInterop": true, // Allow default imports for CommonJS modules
    "allowSyntheticDefaultImports": true, // For easier interop with non-ES modules
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "app/(tabs)/kitchen.jsx"  ]
}
